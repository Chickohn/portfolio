# Next.js Environment Variables
# Copy this file to .env.local and fill in your values

# Google Analytics ID (optional)
NEXT_PUBLIC_GA_ID=

# Site URL (for SEO and structured data)
NEXT_PUBLIC_SITE_URL=https://kohn.me.uk

# ----------------------------
# Sanity (projects database)
# ----------------------------
# These are safe to expose to the browser (Sanity project + dataset identifiers)
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=production

# Optional API version for Sanity client (defaults in code if unset)
SANITY_API_VERSION=

# Read token (optional; required if your dataset is private)
SANITY_API_READ_TOKEN=

# Write token (server-only; NEVER expose to browser)
SANITY_API_WRITE_TOKEN=

# Once migration is confirmed, disable fallback to hard-coded project data
# SANITY_DISABLE_FALLBACK=true

# ----------------------------
# Admin authentication (Auth.js / NextAuth)
# ----------------------------
# Admin allowlist + password (server-only)
ADMIN_EMAIL=
ADMIN_PASSWORD=

# NextAuth config (required for production)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# ----------------------------
# Optional on-demand revalidation
# ----------------------------
# Secret for POST /api/revalidate (header: x-revalidate-secret)
REVALIDATE_SECRET=

# Node Environment
# NODE_ENV=production

